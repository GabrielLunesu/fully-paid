{% comment %}
Snippet: dynamic-product-review.liquid
Usage: {% render 'dynamic-product-review', section: section %}
{% endcomment %}

<div class="main action">
  <div class="box">
    <div class="block title">
      {{ section.settings.author_name }}
      {% if section.settings.verified %}
        <span style="display: flex; align-items: center; gap: 4px" class="verified-badge-and-text">
          <svg viewBox="0 0 24 24" aria-label="Verifizierter Kauf" role="img" class="loox-icon loox-verified-badge" style="width: 1.2em; height: 1.2em;">
            <use href="#loox-ic-verified-icon"></use>
          </svg>
          <span style="font-size:12px;">Verifiziert</span>
        </span>
      {% endif %}
    </div>

    <div class="clearfix"></div>

    <div class="block time">{{ section.settings.review_date }}</div>

    <div class="block stars">
      <ul style="display: inline-flex; gap: 2px;">
        {% for i in (1..5) %}
          <li>
            <svg viewBox="0 0 24 24" role="img" class="loox-icon star" style="width: 1em; height: 1em;">
              <use href="#looxicons-rating-icon"></use>
            </svg>
          </li>
        {% endfor %}
      </ul>
    </div>

    <div class="block">
      <div class="pre-wrap main-text">{{ section.settings.review_text }}</div>
    </div>

    <div class="block">
      <div class="metadata">
        <div class="small text-muted">Produktart:</div>
        <div class="value">{{ section.settings.product_variant }}</div>
      </div>
    </div>
  </div>
</div>
