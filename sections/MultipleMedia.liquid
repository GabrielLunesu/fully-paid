
{% schema %}
{
  "name": "Multiple Media with Text",
  "tag": "section",
  "class": "shopify-section--multiple-media-with-text",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Die Decke, die nicht aufhört zu geben"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Fluff - Luxuriöse, bequeme und warme Kuscheldecke"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Finden Sie heraus, warum unsere Fluff-Decke immer ausverkauft ist"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Siehe"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Left Image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Right Image"
    }
  ],
  "presets": [
    {
      "name": "Multiple Media with Text",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="shopify-section shopify-section--multiple-media-with-text">
  <style>
    .secondImage{
    width: 90%;
    object-fit: cover;
    }
    
    .js [reveal-on-scroll=true]{
      opacity:1;
    }
    .siche{
      background:#e9e9e9;
    }
    .shopify-section--multiple-media-with-text {
      --multiple-media-with-text-grid: "media-wrapper" "content-wrapper" / minmax(0, 1fr);
      --multiple-media-with-text-media-alignment-offset: 0px;
      --multiple-media-with-text-media-grid: auto var(--multiple-media-with-text-media-grid-auto-rows) / auto-flow var(--multiple-media-with-text-media-grid-auto-columns);
      --multiple-media-with-text-media-gap: 0;
      --multiple-media-with-text-media-grid-auto-columns: minmax(0, 1.75fr) minmax(0, 0.8fr) minmax(0, 0.8fr);
    }

    @media screen and (min-width: 700px) {
      .shopify-section--multiple-media-with-text {
        --multiple-media-with-text-media-grid-auto-columns: minmax(0, 1.85fr) minmax(0, 0.35fr) minmax(0, 1.4fr);
      }
    }

    @media screen and (min-width: 1000px) {
      .shopify-section--multiple-media-with-text {
        --multiple-media-with-text-grid: "media-wrapper content-wrapper" / minmax(0, 1fr) minmax(0, 375px);
      }
    }
  </style>

  <div class="section-spacing color-scheme color-scheme--scheme-3 color-scheme--bg-c1f8cb21047e4797e94d0969dc5d1e44 bordered-section">
    <div class="container container--md">
      <multiple-media-with-text reveal-on-scroll="true" class="multiple-media-with-text multiple-media-with-text--overlap">
        <div class="multiple-media-with-text__media-wrapper">
          {% if section.settings.image_1 != blank %}
            <div class="align-self-center">
              <img
                src="{{ section.settings.image_1 | image_url: width: 800 }}"
                alt=""
                width="800"
                height="800"
                loading="lazy"
                sizes="(max-width: 699px) 50vw, 500px"
              >
            </div>
          {% endif %}
          {% if section.settings.image_2 != blank %}
            <div class="align-self-center">
              <img
                src="{{ section.settings.image_2 | image_url: width: 800 }}"
                alt=""
                width="800"
                height="800"
                loading="lazy"
                sizes="(max-width: 699px) 50vw, 500px"
                class="secondImage"
              >
            </div>
          {% endif %}
        </div>

        <div class="multiple-media-with-text__content-wrapper align-self-center">
          <div class="prose">
            {% if section.settings.subheading != blank %}
              <p class="h6">{{ section.settings.subheading }}</p>
            {% endif %}
            {% if section.settings.heading != blank %}
              <p class="h3">{{ section.settings.heading }}</p>
            {% endif %}
            {% if section.settings.description != blank %}
              <p>{{ section.settings.description }}</p>
            {% endif %}
            {% if section.settings.button_link != blank %}
              <div class="button-group">
                <a class="button siche" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
              </div>
            {% endif %}
          </div>
        </div>
      </multiple-media-with-text>
    </div>
  </div>
</section>
