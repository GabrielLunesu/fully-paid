<section id="shopify-section-template--{{ section.id }}" class="shopify-section shopify-section--media-grid">
  <style>
    #shopify-section-template--{{ section.id }} {
      --media-grid-row-height: 220px;
      --media-grid-gap: 1.5rem;
    }

    @media screen and (min-width: 700px) {
      #shopify-section-template--{{ section.id }} {
        --media-grid-row-height: 290px;
      }
    }

    @media screen and (min-width: 1150px) {
      #shopify-section-template--{{ section.id }} {
        --media-grid-gap: 1.875rem;
      }
    }
  </style>

  <div class="section-spacing color-scheme color-scheme--scheme-953821b3-cab1-4eb8-84d4-8ae8655d93b6 color-scheme--bg-fbe1eca9a2e43407cbaadbca72403aa2">
    <div class="container container--lg">
      <div class="section-stack">
        <media-grid class="media-grid">
          {% for block in section.blocks %}
            <a href="{{ block.settings.link }}" class="media-grid__item"
              style="--media-grid-item-column-span: {{ block.settings.col_span }}; --media-grid-item-row-span: {{ block.settings.row_span }}">
              <div class="content-over-media color-scheme color-scheme--scheme-8dbf89f9-5d4b-4020-9795-b88cf55a18cb group"
                reveal-on-scroll="true"
                style="--content-over-media-overlay: 0 0 0 / {{ block.settings.overlay_opacity }}; opacity: 1;">
                {% if block.settings.image %}
                  <img
                    src="{{ block.settings.image | image_url: width: 1600 }}"
                    alt="{{ block.settings.image.alt | escape }}"
                    width="1600"
                    height="1600"
                    class="zoom-image group-hover:zoom"
                    loading="lazy"
                    sizes="(max-width: 699px) 100vw, {{ block.settings.col_span | divided_by: 12.0 | times: 100 }}vw">
                {% endif %}
                <div class="prose prose--tight place-self-center text-center">
                  {% if block.settings.title != blank %}
                    <p class="h4">{{ block.settings.title }}</p>
                  {% endif %}
                  {% if block.settings.button_text != blank %}
                    <button type="button" class="button">{{ block.settings.button_text }}</button>
                  {% endif %}
                </div>
              </div>
            </a>
          {% endfor %}
        </media-grid>
      </div>
    </div>
  </div>
</section>

