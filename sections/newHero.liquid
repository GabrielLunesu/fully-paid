    {{ 'newHero.css' | asset_url | stylesheet_tag }}

{% if section.settings.hero_image %}
  {% assign bg_image = section.settings.hero_image | image_url: width: 2000 %}
{% else %}
  {% assign bg_image = 'placeholder-image.jpg' | asset_url %}
{% endif %}

<div class="new-hero" style="background-image: url('{{ bg_image }}');">
  <div class="new-hero__overlay">
    <div class="new-hero__text-block">
      <p class="new-hero__subheading">{{ section.settings.subheading }}</p>
      <h1 class="new-hero__heading">{{ section.settings.heading }}</h1>
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="new-hero__button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>


{% schema %}
{
  "name": "New Hero",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "New Collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "SUMMER '25"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Explore Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
    }
  ],
  "presets": [
    {
      "name": "New Hero Banner"
    }
  ]
}
{% endschema %}
