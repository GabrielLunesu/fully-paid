{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "class": "shopify-section-group-footer-group shopify-section--footer",
  "settings": [],
  "blocks": [
    {
      "type": "newsletter",
      "name": "Newsletter Signup",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Exklusive Angebote erhalten"
        },
        {
          "type": "textarea",
          "id": "subtext",
          "label": "Subtext",
          "default": "Werde Mitglied unseres exklusiven E-Mail-Verteilers und erhalte sofort 10% Rabatt auf deinen nächsten Einkauf"
        }
      ]
    },
    {
      "type": "link_group",
      "name": "Link Group",
      "settings": [
        {
          "type": "text",
          "id": "group_heading",
          "label": "Group Heading",
          "default": "Kundenmenü"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Footer Menu"
        }
      ]
    },
    {
      "type": "info_block",
      "name": "Information Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "INFORMATION"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Adresse: Roermondsestraat 32D<br>E-Mail: info@elegare.de</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        { "type": "newsletter" },
        { "type": "link_group" },
        { "type": "link_group" },
        { "type": "info_block" }
      ]
    }
  ]
}
{% endschema %}
